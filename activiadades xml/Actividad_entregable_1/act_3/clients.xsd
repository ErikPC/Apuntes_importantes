<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="clients">
        <!-- elemento padre -->
        <xs:complexType>
            <xs:sequence>
                <xs:element name="client" maxOccurs="unbounded">
                    <!-- elemento hijo que tendra llinatge edat data_naixamen email telefon -->
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="llinatge" type="xs:string" />
                            <xs:element name="edat" type="xs:integer" />
                            <xs:element name="data_naixement">
                                <xs:complexType>
                                    <xs:simpleContent>
                                        <xs:extension base="xs:string">
                                            <!-- a data_naixament añadimos el atributo poblacio -->
                                            <xs:attribute name="poblacio" type="xs:string" />
                                        </xs:extension>
                                    </xs:simpleContent>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="email" minOccurs="0" type="xs:string" />
                            <xs:element name="telefon" minOccurs="0" type="xs:string" />
                        </xs:sequence>
                        <!-- añadimos el atributo codi -->
                        <xs:attribute name="codi" type="xs:string" />
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>